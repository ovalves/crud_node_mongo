<% include ../partials/admin/header %>

	<% include ../partials/admin/navbar %>
		<div class="mdl-layout">
			<main class="mdl-layout__content">
				<% if(noticias.length > 0) { %>
					<% for(var i = 0; i < noticias.length; i++) {%>
						<div class="demo-card-wide mdl-card mdl-shadow--2dp">
					  		<div class="mdl-card__title">
						    	<h2 class="mdl-card__title-text"><%=noticias[i].titulo%></h2>
						  	</div>
						  	<div class="mdl-card__supporting-text">
							    <%=noticias[i].resumo%>
						  	</div>
						  	<div class="mdl-card__actions mdl-card--border">
						    	<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
						      		<%=noticias[i].autor%>
						    	</a>
								<form action="/admin/noticias/delete/<%= noticias[i]._id %>?_method=DELETE" method="post" class="well form-inline">
									<button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent">
										<i class="material-icons">delete</i>
									</button>
								</form>

								<a href="/admin/noticias/editar/<%= noticias[i]._id %>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent">
									<i class="material-icons">mode_edit</i>
								</a>
						  	</div>
						</div>
					<% } %>
				<% } %>
			</main>
		</div>
<% include ../partials/admin/footer %>
