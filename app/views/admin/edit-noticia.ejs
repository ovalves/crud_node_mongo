<% include ../partials/admin/header %>

	<% include ../partials/admin/navbar %>
        <div class="container">
            <% if(noticia) { %>
                <div class="mdl-layout custom-margin-auto">
                    <main class="mdl-layout__content custom-margin__content">
                        <div class="mdl-card mdl-shadow--6dp">
                            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                                <h2 class="mdl-card__title-text">Acme Co.</h2>
                            </div>
                            <div class="mdl-card__supporting-text">
                                <form action="/admin/edit-noticia" method="post">
                                    <div class="mdl-textfield mdl-js-textfield">
                                        <input class="mdl-textfield__input" value="<%=noticia.titulo%>" name="titulo" type="text" id="titulo" />
                                        <label class="mdl-textfield__label" for="email">Título</label>
                                    </div>
                                    <div class="mdl-textfield mdl-js-textfield">
                                        <input class="mdl-textfield__input" value="<%=noticia.resumo%>" name="resumo" type="text" id="resumo" />
                                        <label class="mdl-textfield__label" for="userpass">Resumo</label>
                                    </div>
                                    <div class="mdl-textfield mdl-js-textfield">
                                        <input class="mdl-textfield__input" value="<%=noticia.autor%>" name="autor" type="text" id="autor" />
                                        <label class="mdl-textfield__label" for="userpass">Autor</label>
                                    </div>
                                    <div class="mdl-card__actions mdl-card--border">
                                        <button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Salvar Mudança</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </main>
                </div>
            <% } %>
        </div>
    <% include ../partials/admin/footer %>
